<ul class="nav nav-tabs" id="faq-language">
    {% for language in languages %}
        <li class="{{ loop.first ? 'active' : '' }}"><a href="#image-tab-language{{ language.language_id }}" data-toggle="tab"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /> {{ language.name }}</a></li>
    {% endfor %}
</ul>
<div class="tab-content">
    {% for language in languages %}
        <div class="tab-pane {{ loop.first ? 'active' : '' }}" id="image-tab-language{{ language.language_id }}">
             


            <div class="form-group">
                <label class="col-sm-2 control-label" for="input-logo-admin">{{ entry_logo_admin }}</label>
                <div class="col-sm-10"><a href="" id="thumb-logo-admin{{language.language_id}}" data-toggle="image" class="img-thumbnail">
                    <img src="{{ logo_admin['language_'~language.language_id] }}" alt="" title="" data-placeholder="{{ placeholder }}" /></a>
                    <input type="hidden" name="config_logo_admin[{{'language_'~language.language_id}}]" value="{{ config_logo_admin['language_'~language.language_id] }}" id="input-logo-admin{{language.language_id}}" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label" for="input-logo">{{ entry_logo }}</label>
                <div class="col-sm-10"><a href="" id="thumb-logo{{language.language_id}}" data-toggle="image" class="img-thumbnail">
                <img src="{{ logo['language_'~language.language_id] }}" alt="" title="" data-placeholder="{{ placeholder }}" /></a>
                    <input type="hidden" name="config_logo[{{'language_'~language.language_id}}]" value="{{ config_logo['language_'~language.language_id] }}" id="input-logo{{language.language_id}}" />
                </div>
            </div>
                
            <div class="form-group">
                <label class="col-sm-2 control-label" for="input-icon"><span data-toggle="tooltip" title="{{ help_icon }}">{{ entry_icon }}</span></label>
                <div class="col-sm-10">
                    <a href="" id="thumb-icon{{language.language_id}}" data-toggle="image" class="img-thumbnail">
                    <img src="{{ icon['language_'~language.language_id] }}" alt="" title="" data-placeholder="{{ placeholder }}" /></a>
                    <input type="hidden" name="config_icon[{{'language_'~language.language_id}}]" value="{{ config_icon['language_'~language.language_id] }}" id="input-icon{{language.language_id}}" />
                </div>
            </div>


        </div>
    {% endfor %}
</div>

